<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.Payment.view.PaymentFragment">

    <!-- WebView for displaying payment URL -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Online Payment Header -->
    <TextView
        android:id="@+id/onlinePaymentHeader"
        android:layout_width="416dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:background="@color/gray"
        android:padding="10dp"
        android:text="Online Payment"
        android:textColor="#424242"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Visa Card CheckBox -->
    <CheckBox
        android:id="@+id/visaCardCheckBox"
        android:layout_width="284dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:button="@drawable/custom_checkbox"
        android:paddingStart="10dp"
        android:text="Visa Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onlinePaymentHeader" />

    <!-- More Payment Options Header -->
    <TextView
        android:id="@+id/morePaymentOptionsHeader"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:background="@color/gray"
        android:padding="10dp"
        android:text="More Payment Options"
        android:textColor="#424242"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visaCardCheckBox" />

    <!-- Cash on Delivery CheckBox -->
    <CheckBox
        android:id="@+id/cashOnDeliveryCheckBox"
        android:layout_width="245dp"
        android:layout_height="115dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:button="@drawable/custom_checkbox"
        android:paddingStart="10dp"
        android:text="Cash on Delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/morePaymentOptionsHeader" />

    <!-- Payment Button -->
    <Button
        android:id="@+id/paymentButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/black"
        android:text="@string/payment"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
