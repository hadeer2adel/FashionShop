<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fashionshop.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.fashionshop.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />


    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.fashionshop.FavoriteFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.fashionshop.SettingsFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_settings" />

    <action
        android:id="@+id/action_profileFragment_to_ordersFragment"
        app:destination="@id/orderFragment" />

    <action
        android:id="@+id/action_profileFragment_to_favoritesFragment"
        app:destination="@id/favoriteFragment" />

    <action
        android:id="@+id/action_profileFragment_to_settingFragment"
        app:destination="@id/settingsFragment" />
</navigation>