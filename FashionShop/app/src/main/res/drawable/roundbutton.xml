<!-- res/drawable/roundbutton.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC00" /> <!-- Color when pressed -->
            <corners android:radius="30dp" /> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="@color/gray1" /> <!-- Border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/LightGray" /> <!-- Default color -->
            <corners android:radius="200dp" /> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="@color/gray1" /> <!-- Border -->
        </shape>
    </item>
</selector>
